


<!-- Header -->
<a name="about"></a>
<div class="intro-header">
    <div class="container">

        <div class="row">
            <div class="col-lg-12">
                <div class="intro-message">
                    <h1>Teacher's Assistant</h1>
                    <h3 class = 'intmessage'>A helpful tool for teachers</h3>
                    <hr class="intro-divider">
                    <ul class="list-inline intro-social-buttons intmessage">
                      <%- if teacher_signed_in? %>
                      <li>
                        <a href="<%= teacher_session_path%>" class="btn btn-default btn-lg"><i class="fa fa-user fa-fw"></i> <span class="network-name">Welcome Back <%= current_teacher.name %>!</span></a>
                      </li>
                      <% else %>
                      <li>
                        <a href="teachers/sign_up" class="btn btn-default btn-lg"><i class="fa fa-plus-circle fa-fw"></i> <span class="network-name">Sign-up</span></a>
