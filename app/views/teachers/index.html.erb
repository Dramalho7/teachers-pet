                      <li>
                        <a href="#" class="btn  contact btn-lg"><i class="fa fa-envelope fa-fw"></i> <span class="network-name">Contact Us</span></a>
                      </li>

                      <% end %>
                    </ul>
                    <section class="main">
                      <a class="arrow-wrap" href="#content">
                        <span class="arrow"></span>
                        <!--<span class="hint">scroll</span>-->
                      </a>

                </div>
            </div>
        </div>

    </div>
    <!-- /.container -->

</div>
